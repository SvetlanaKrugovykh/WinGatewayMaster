{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Proxy Server",
      "program": "${workspaceFolder}/index.js",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "--inspect"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "tests"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "--inspect"
      ]
    }
  ]
}